---

import { profileConfig } from "../config";
import { url } from "../utils/url-utils";

const currentYear = new Date().getFullYear();
---

<!--<div class="border-t border-[var(&#45;&#45;primary)] mx-16 border-dashed py-8 max-w-[var(&#45;&#45;page-width)] flex flex-col items-center justify-center px-6">-->
<div class="transition border-t border-black/10 dark:border-white/15 my-10 border-dashed mx-32"></div>
<!--<div class="transition bg-[oklch(92%_0.01_var(&#45;&#45;hue))] dark:bg-black rounded-2xl py-8 mt-4 mb-8 flex flex-col items-center justify-center px-6">-->
<div class="transition border-dashed border-[oklch(85%_0.01_var(--hue))] dark:border-white/15 rounded-2xl mb-12 flex flex-col items-center justify-center px-6">
    <div class="transition text-50 text-sm text-center">
        <a class="transition link text-[var(--primary)] font-medium" href="https://icp.gov.moe/?keyword=20250488" target="_blank">萌ICP备20250488号</a>&ensp;
        <a class="transition link text-[var(--primary)] font-medium" href="https://icp.sakura.ink/beian?code=2508128888" target="_blank">樱ICP备2508128888号</a>&ensp;
        <a class="transition link text-[var(--primary)] font-medium" href="https://icp.redcha.cn/beian/ICP-2025080052.html" title="茶ICP备2025080052号" target="_blank">茶ICP备2025080052号</a><br>
        <div class="flex justify-center gap-4 mt-2">
            <a href="https://hopedomain.com/zh/age/sakura.ink" target="_blank">
                <img src="https://hopedomain.com/api/badge/domain-age/sakura.ink?theme=purple&lang=zh" alt="域名年龄" />
            </a>
            <a href="https://ipw.cn/ssl/?site=blog.sakura.ink" title="本站支持SSL安全访问" target='_blank'>
                <img style='display:inline-block;vertical-align:middle' alt="本站支持SSL安全访问" src="https://static.ipw.cn/icon/ssl-s1.svg">
            </a>
            <a href="https://ipw.cn/ipv6webcheck/?site=blog.sakura.ink" title="本站支持IPv6访问" target='_blank'>
                <img style='display:inline-block;vertical-align:middle' alt="本站支持IPv6访问" src="https://static.ipw.cn/icon/ipv6-certified-s1.svg">
            </a>
        </div><br>
        &copy; <span id="copyright-year">{currentYear}</span> {profileConfig.name}. All Rights Reserved. /
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href={url('rss.xml')}>RSS</a> /
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href={url('sitemap-index.xml')}>Sitemap</a><br>
        Powered by
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href="https://astro.build">Astro</a> &
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href="https://github.com/saicaca/fuwari">Fuwari</a><br>
        Server by
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href="https://vercel.com/">Vercel</a> &
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href="https://www.cloudflare.com/">Cloudflare</a><br>
        <!-- 运行时间 -->
        <div class="mt-2">
            <span>⭐ 本站已运行 </span>
            <span id="uptime" class="text-[var(--primary)] font-medium">计算中…</span>
        </div>
        <script is:inline>
            (function () {
                const startTs = new Date('2025-06-07T00:00:00Z').getTime(); // 2025-06-07 08:00:00 +08:00
                const el = document.getElementById('uptime');
                const pad = (n) => String(n).padStart(2, '0');
                function render() {
                    const now = Date.now();
                    let diff = Math.max(0, now - startTs);
                    const dayMs = 24 * 60 * 60 * 1000;
                    const hourMs = 60 * 60 * 1000;
                    const minMs = 60 * 1000;
                    const secMs = 1000;
                    const days = Math.floor(diff / dayMs); diff -= days * dayMs;
                    const hours = Math.floor(diff / hourMs); diff -= hours * hourMs;
                    const minutes = Math.floor(diff / minMs); diff -= minutes * minMs;
                    const seconds = Math.floor(diff / secMs);
                    if (el) el.textContent = `${days} 天 ${pad(hours)} 小时 ${pad(minutes)} 分 ${pad(seconds)} 秒`;
                }
                render();
                setInterval(render, 1000);
            })();
        </script>
    </div>
</div>